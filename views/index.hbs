<body>

    <div class="container main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="search_form">
                        <input type="text" name="search" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                        <input type="submit" value="search" id="searchBtn">
                    </form>
                </div>

                <div class="tempInfo">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">25 JUN 2022</p>
                    </div>

                    <div class="main_layer">
                        <p id="city_name"></p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_value">0</span> <sup>o</sup>C</p>
                        <p id="temp_status">
                            <i class="fa fa-cloud"></i>
                        </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
